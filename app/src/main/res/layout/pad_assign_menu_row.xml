<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/pa_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="@dimen/pa_menu_icon_left_margin"
        android:layout_marginTop="@dimen/pa_menu_icon_top_margin"
        android:layout_marginRight="@dimen/pa_menu_icon_right_margin"
        android:contentDescription="@string/row_img_descr" />

    <!-- Change the text attribute to point to the ID
         once the sound bank list is compiled -->
    <TextView
        android:id="@+id/pa_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@id/pa_text"
        android:layout_toRightOf="@id/pa_icon"
        android:layout_alignBottom="@id/pa_icon" />

</RelativeLayout>