<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#8CE24A"/>
            <stroke
                android:width="1dp"
                android:color="#D59500" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FAF9F5"
                android:centerColor="#C4C0B8"
                android:endColor="#BCA77C"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#D59500" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>