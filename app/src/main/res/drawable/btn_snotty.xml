<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#CCCC00" />
            <stroke
                android:width="1dp"
                android:color="#333300" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#4C9900"
                android:centerColor="#999900"
                android:endColor="#193300"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#193300" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>