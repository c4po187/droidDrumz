<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#808080" />
            <stroke
                android:width="1dp"
                android:color="#202020" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7D3AF2"
                android:centerColor="#55A0A8"
                android:endColor="#2E1161"
                android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="#330033" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>