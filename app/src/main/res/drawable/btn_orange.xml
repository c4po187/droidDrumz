<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true">
            <shape>
                <solid
                    android:color="#66CC00" />
                <stroke
                    android:width="1dp"
                    android:color="#336600" />
                <corners
                    android:radius="3dp" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#F3AE1B"
                    android:endColor="#BB6008"
                    android:angle="-90" />
                <stroke
                    android:width="1dp"
                    android:color="#BB6008" />
                <corners
                    android:radius="5dp" />
            </shape>
        </item>
    </selector>